<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ElegeirPlaylist"
        android:text="Elegir Playlist"
        android:textSize="@dimen/textSize30"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:id="@+id/recyclerView_chosePlaylist"
        android:layout_margin="@dimen/margin15"
        app:layout_constraintTop_toBottomOf="@+id/textView_ElegeirPlaylist"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_CancelarAñadirTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Cancelar"
        android:layout_marginBottom="@dimen/marginTop20"
        android:layout_marginHorizontal="@dimen/margin15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_AceptarAñadirTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Aceptar"
        android:layout_marginBottom="@dimen/marginTop20"
        android:layout_marginHorizontal="@dimen/margin15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_CancelarAñadirTrack"/>




</androidx.constraintlayout.widget.ConstraintLayout>