<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/width130"
    android:layout_height="wrap_content"
    android:background="@color/Negro"
    android:layout_marginVertical="@dimen/marginVertica10"
    android:layout_marginHorizontal="@dimen/margin15">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height150"
            android:id="@+id/cardView_ImageArtist"
            app:cardBackgroundColor="@color/Negro"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView_ArtistName">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView_ArtistRank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/xd"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="5dp" />

        </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ArtistName"
        android:textColor="@color/Blanco"
        android:textSize="@dimen/textSize20"
        android:text="BADBUNY"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cardView_ImageArtist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>