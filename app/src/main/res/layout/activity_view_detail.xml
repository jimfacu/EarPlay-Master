<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Negro"
    tools:context=".DetailActivity.View_DetailActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_BackToHomeActivity"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_margin="@dimen/margin15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/imageButton_config_Detail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="false"
        android:background="@color/Negro"
        android:src="@drawable/ic_baseline_options"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_AlbumDetailActivity"
        android:src="@drawable/earplay"
        android:layout_marginTop="@dimen/marginTop30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_BackToHomeActivity"
        app:layout_constraintBottom_toTopOf="@id/textView_NameTrackDetailActivity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_NameTrackDetailActivity"
        android:text="Smells like teen spirit"
        android:textStyle="bold"
        android:textSize="@dimen/textSize25"
        android:textColor="@color/Blanco"
        android:layout_marginHorizontal="@dimen/margin15"
        app:layout_constraintBottom_toTopOf="@+id/textView_ArtistNameDetailActivity"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_savedeleteFavTrack"
        android:layout_marginHorizontal="@dimen/margin15"
        android:src="@drawable/ic_baseline_favorite_border_detail_activity_24"
        app:layout_constraintTop_toTopOf="@id/textView_NameTrackDetailActivity"
        app:layout_constraintBottom_toBottomOf="@id/textView_ArtistNameDetailActivity"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ArtistNameDetailActivity"
        android:text="Nirvana"
        android:textColor="@color/Blanco"
        android:textSize="@dimen/marginTop20"
        android:layout_marginBottom="@dimen/marginBottom30"
        android:layout_marginHorizontal="@dimen/margin15"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_DetailActivity"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_startTime_DetailActivity"
        android:text="0:00"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/textSize15"
        android:layout_marginHorizontal="@dimen/margin15"
        app:layout_constraintBottom_toBottomOf="@id/seekBar_DetailActivity"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_endTime_DetailActivity"
        android:text="00:30"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/textSize15"
        android:layout_marginHorizontal="@dimen/margin15"
        app:layout_constraintBottom_toBottomOf="@id/seekBar_DetailActivity"
        app:layout_constraintRight_toRightOf="parent"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_DetailActivity"
        android:layout_marginBottom="@dimen/marginBottom30"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintBottom_toTopOf="@id/imageView_PausePlayTrack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_PreviousTrack"
        android:src="@drawable/ic_baseline_skip_previous_detail_activity_24"
        android:layout_margin="@dimen/marginTop30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_PausePlayTrack"
        android:src="@drawable/ic_baseline_pause_detail_activity_24"
        android:layout_margin="@dimen/marginTop30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_NextTrack"
        android:src="@drawable/ic_baseline_skip_next_detail_activity_24"
        android:layout_margin="@dimen/marginTop30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>